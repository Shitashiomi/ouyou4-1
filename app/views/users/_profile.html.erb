<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>

	<tr>
		<th><p>follows: <%= link_to "#{user.follower.count}", follows_path(user) %></p></th>
	</tr>

	<tr>
		<th><p>followers: <%=link_to " #{user.followed.count}", followers_path(user) %></p></th>
	</tr>

    <tr>
	  <th>
	  	<% if current_user != user %>
	  	  <% if current_user.following?(user) %>
            <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST, class: "btn btn-large btn-success follow-btn" %>
          <% else %>
            <%= link_to 'フォローする', follow_path(user.id), method: :POST, class: "btn btn-large btn-primary follow-btn" %>
          <% end %>
        <% end %>
      </th>
    </tr>

</table>

<div class="row">
	<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user}" %>
</div>